extends ../layout.jade

block title
  title Create a new host

block content
  form.host-form(action="/hosts", method = "POST")
    input(type="text", placeholder="Host address", name = "host_address", required)
    input(type="text", placeholder="Host URL", name = "host_url", required)
    input(type="submit", value = "Submit")
  
  .host-list
    each address in addresses
      .host-item
        .host-info(data-address="#{address.ip}")= address.ip
        .host-info(data-url="#{address.url}")
          a(href="http://#{address.url}", target="_blank")= address.url
        a(href="/hosts/#{address.url}", class = "host-delete") Delete
        span.host-status
